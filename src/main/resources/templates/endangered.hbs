
{{#partial "content"}}
    {{#if endangered}}
        <table class="table text-center">
            <h4 style="color: #fff;font-size: xx-large;font-weight: 600;">Endangered animals spotted by our rangers</h4>
            <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Health</th>
                <th scope="col">Age</th>
            </tr>
            </thead>
            <tbody style="color:#fff;">
            {{#each endangered}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{health}}</td>
                    <td>{{age}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No animals sighted yet. Report a sighting to have it appear here</h5>
    {{/if}}

{{/partial}}

{{> layout.hbs}}



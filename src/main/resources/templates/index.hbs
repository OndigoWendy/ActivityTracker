

{{#partial "content"}}
    {{#if sightings}}
        <h4 class="text-center" style="color: #fff;font-size: xx-large;font-weight: 600;">SIGHTING DETAILS</h4>
        <table class="table text-center">
            <thead style="background-color:#fff; color:black;opacity:0.5;">
            <tr>
                <th scope="col">Animal Seen</th>
                <th scope="col">Location</th>
                <th scope="col">Spotted On</th>
                <th scope="col">Ranger</th>
            </tr>
            </thead>
            <tbody style="color:#fff;">
            {{#each sightings}}
                <tr>
                    <td>{{animalName}}</td>
                    <td>{{location}}</td>
                    <td>{{readableTimestamp}}</td>
                    <td>{{rangerName}}</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No recent sightings.Record a new one!</h5>
    {{/if}}
{{/partial}}

{{> layout.hbs}}